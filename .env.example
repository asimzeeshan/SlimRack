# SlimRack Configuration
# Copy this file to .env and modify as needed

# Database Configuration
# Driver: sqlite or mysql
DB_DRIVER=sqlite

# For SQLite: path relative to project root
# For MySQL: database name
DB_DATABASE=storage/database/slimrack.sqlite

# MySQL only settings
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=
DB_PASSWORD=

# Application Settings
APP_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING
APP_DEBUG=false
APP_URL=http://localhost:8080

# Authentication
# Username for admin login (6-20 alphanumeric characters)
AUTH_USERNAME=admin
# Password hash (bcrypt) - will be set during installation
AUTH_PASSWORD_HASH=

# API Keys (comma-separated list)
# Example: API_KEYS=key1,key2,key3
API_KEYS=

# Session Settings
SESSION_LIFETIME=120
SESSION_NAME=slimrack_session

# Cookie Settings (for "Remember Me")
COOKIE_LIFETIME=30
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
